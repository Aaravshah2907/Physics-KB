# --- Physics KB Configuration ---

# -- Gemini Models --
# Primary model for complex content creation
export PKB_PRIMARY_MODEL="default" 
# Fallback model for creation and lightweight tasks
export PKB_FLASH_MODEL="gemini-1.5-flash"

# -- Local LLM (Ollama) --
# Model used for metadata, redundancy checks, and failover
export PKB_LOCAL_MODEL="deepseek-r1:7b"
# Threshold for stripping <think> tags
export PKB_STRIP_THINK=true

# -- System Settings --
# Maximum subheadings before a split is recommended
export PKB_HEADING_LIMIT=20
# Similarity threshold (0-100) for note deduplication
export PKB_SIMILARITY_THRESHOLD=80
# Enable/Disable Master Progress bars
export PKB_SHOW_UI=true
